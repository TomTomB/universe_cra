{
  "include": ["src"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "baseUrl": "./",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "paths": {
      "@universe/shared/*": ["src/shared/*"],
      "@universe/core/*": ["src/core/*"],
      "@universe/core": ["src/core/index.ts"],
      "@universe/types/*": ["src/types/*"],
      "@universe/mocks/*": ["src/mocks/*"],
      "@universe/renderer/store/*": ["src/renderer/store/*"],
      "@universe/renderer/store": ["src/renderer/store/index.ts"],
      "@universe/renderer/style/*": ["src/renderer/style/*"],
      "@universe/renderer/style": ["src/renderer/style/index.ts"]
    }
  }
}
